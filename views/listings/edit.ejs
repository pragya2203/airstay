<% layout("layouts/boilerplate") %>
  <br><br>
  <div class="row">
    <div class="col-8 offset-2">
      <h3>Edit Listing</h3>
      <form action="/listings/<%= list._id %>?_method=PUT" method="POST" novalidate class="needs-validation"
        enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input id="title" name="listing[title]" value="<%= list.title %>" type="text" class="form-control" required />
          <div class="valid-feedback">Title looks good!</div>
        </div>
        <br>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea id="description" name="listing[description]" class="form-control"
            required><%= list.description %></textarea>
          <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <br>
        <div class="mb-3">
          <p>Original Image</p>
          <img src="<%= list.image.url %>" class="img-fluid rounded"
            style="max-width: 200px; max-height: 200px; object-fit: cover;" />
        </div>

        <br>

        <div class="mb-3">
          <label for="image" class="form-label">Image </label>
          <input id="image" name="listing[image]" type="file" class="form-control" />
        </div>
        <br>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input id="price" name="listing[price]" value="<%= list.price %>" type="number" class="form-control"
              required />
            <div class="invalid-feedback">Please enter a valid price</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input id="country" name="listing[country]" value="<%= list.country %>" type="text" class="form-control"
              required />
            <div class="invalid-feedback">Please enter a valid country</div>
          </div>
        </div>
        <br>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input id="location" name="listing[location]" value="<%= list.location %>" type="text" class="form-control"
            required />
          <div class="invalid-feedback">Please enter a valid location</div>
        </div>
        <br>

        <div class="mb-3">
          <label for="category" class="form-label">Category (optional)</label>
          <select id="category" name="listing[category]" class="form-select">
            <option value="">Select Category</option>
            <option value="Trending" <%=list.category==='Trending' ? 'selected' : '' %>>Trending</option>
            <option value="Rooms" <%=list.category==='Rooms' ? 'selected' : '' %>>Rooms</option>
            <option value="Iconic Cities" <%=list.category==='Iconic Cities' ? 'selected' : '' %>>Iconic Cities</option>
            <option value="Castles" <%=list.category==='Castles' ? 'selected' : '' %>>Castles</option>
            <option value="Amazing Pools" <%=list.category==='Amazing Pools' ? 'selected' : '' %>>Amazing Pools</option>
            <option value="Camping" <%=list.category==='Camping' ? 'selected' : '' %>>Camping</option>
            <option value="Farms" <%=list.category==='Farms' ? 'selected' : '' %>>Farms</option>
            <option value="Arctic" <%=list.category==='Arctic' ? 'selected' : '' %>>Arctic</option>
          </select>
        </div>


        <button type="submit" class="btn" style="background-color: #fe424d; color: white;">Edit</button>
        <br><br> <br>
      </form>
    </div>
  </div>
  </body>