<style>
  .btn-search {
    background-color: #fe424d;
    color: white;
    border-radius: 25px;
    padding: 0.5rem 1.2rem;
    font-weight: 500;
    border: none;
    transition: background-color 0.3s ease;
  }

  .btn-search:hover {
    background-color: #e63946;
  }

  .btn-search i {
    margin-right: 0.5rem;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 1.2rem;
    border: 1px solid #ced4da;
    width: 250px;
    transition: box-shadow 0.2s ease;
  }

  .search-inp:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(254, 66, 77, 0.2);
    border-color: #fe424d;
  }

  @media (max-width: 576px) {
    .search-inp {
      width: 150px;
    }

    .btn-search {
      padding: 0.4rem 0.8rem;
      font-size: 0.9rem;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-white border-bottom shadow-sm sticky-top">
  <div class="container-fluid px-4">

    <!-- Brand -->
    <a class="navbar-brand fw-bold text-danger" href="/listings">
      <i class="fa-solid fa-compass-drafting me-2"></i>
    </a>

    <!-- Mobile Toggler -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar Content -->
    <div class="collapse navbar-collapse" id="navbarContent">

      <!-- Left Links -->
      <ul class="navbar-nav me-auto mb-2 mb-md-0">
        <li class="nav-item">
          <a class="nav-link" href="/listings">Explore</a>
        </li>
      </ul>

      <!-- Search Form -->
      <form class="d-flex align-items-center me-3" role="search" action="/listings/search" method="GET">
        <input 
          type="search" 
          name="q" 
          class="form-control search-inp me-2"
          placeholder="Search destinations"
          aria-label="Search"
          value="<%= typeof q !== 'undefined' ? q : '' %>"
        />
        <button class="btn btn-search" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>Search
        </button>
      </form>

      <!-- Right Links -->
      <ul class="navbar-nav ms-auto mb-2 mb-md-0">
        <li class="nav-item">
          <a class="nav-link" href="/listings/new">Airbnb your home</a>
        </li>

        <% if (!currUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/signup">Sign Up</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login">Log In</a>
          </li>
        <% } %>

        <% if (currUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/bookings">My Bookings</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/bookings/owner/dashboard">Owner Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-danger fw-semibold" href="/logout">Log Out</a>
          </li>
          <% } %>
      </ul>
    </div>
  </div>
</nav>
